<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		    <mapper namespace="com.gang.start.board.BoardDAO">
		    	<select id="getList" resultType="BoardDTO" >
		    			SELECT * FROM BOARD ORDER BY NUM DESC
		    	</select>
		    	
		    	<select id="getDetail" parameterType="BoardDTO" resultType="BoardDTO">
		    			SELECT * FROM BOARD WHERE NUM = #{num}
		    	</select>
		    	
		    	<insert id="add" parameterType="BoardDTO">
		    			INSERT INTO BOARD VALUES(BOARD_SEQ.NEXTVAL, #{title}, #{contexts}, #{userName}, SYSDATE,#{views})
		    	</insert>
		    	
		    	<update id="update" parameterType="BoardDTO">
		    			UPDATE BOARD SET TITLE = #{title}, CONTEXTS = #{contexts} WHERE NUM = #{num}
		    	</update>
		    	
		    	<delete id="delete" parameterType="BoardDTO">
		    	 		DELETE FROM BOARD WHERE NUM = #{num}
		    	</delete>
		    	
		    	
		    	<update id="updateViews" parameterType="int">
		    		UPDATE BOARD SET VIEWS = VIEWS+1 WHERE NUM = #{num}
		    	</update>
		    	 
		    	
		    
		    
		    </mapper>