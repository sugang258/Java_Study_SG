<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		    <mapper namespace="com.gang.start.board.qna.QnaDAO">
			    <select id ="getList" resultType="QnaDTO">
						SELECT * FROM QNA ORDER BY NUM DESC
					</select>
					
					<select id="getDetail" parameterType="QnaDTO" resultType="QnaDTO">
						SELECT * FROM QNA WHERE NUM = #{num}
					</select>
					
					<insert id="setAdd" parameterType="QnaDTO">
						INSERT INTO QNA VALUES (BOARD_SEQ.NEXTVAL,#{title},#{writer},#{contents},SYSDATE,0,0,0,0)
					</insert>
					
					<update id="setUpdate" parameterType="QnaDTO">
						UPDATE QNA SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
					</update>
					
					<delete id="setDelete" parameterType="QnaDTO">
						DELETE FROM QNA WHERE NUM = #{num}
					</delete>
			    
		    
		    </mapper>